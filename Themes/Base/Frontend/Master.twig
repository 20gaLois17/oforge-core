<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Default Title{% endblock title %}</title>
    {% block head_styles %}
        {% if assets.css %}
            <link rel="stylesheet" href="{{ assets.css }}"/>
        {% endif %}
    {% endblock head_styles %}
</head>
<body>

{% block body %}
{% endblock body%}

{% block footer_scripts %}
    <script>
        console.log("%cHello World! This is a default JavaScript from the footer block.", "color: #dd0000");
    </script>
    {% include 'Frontend/Components/Scripts.twig' %}
{% endblock footer_scripts%}

{% block meta %}
    {% if session %}
        <style>
            .meta {
                background: #aca;
                width: 100%;
                min-height: 300px;
                font-size: 1.2rem;
            }
        </style>
        <div class="meta">
            {% for key, val in session  %}
                <p>{{ key }} : {{ val }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock meta %}

</body>
</html>
