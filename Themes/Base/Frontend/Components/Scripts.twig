{% block js_variables %}
    {% if js %}
        <script>
            {#
                Sometimes you have to use twig variables inside JavaScript. Instead of putting these into data-attributes
                or having inline scripts in several twig templates, we store the neccessary data from the php controller
                in a js variable and make this available in this twig template part.
            #}
            {% for key, item in js %}
                var {{ key }} = {{ item|json_encode|raw }};
            {% endfor %}
        </script>
    {% endif %}
{% endblock js_variables %}

