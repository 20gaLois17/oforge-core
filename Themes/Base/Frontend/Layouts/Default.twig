{#
    The default theme layout.
    Every layout should extend either another layout or extend the Master.twig template.
#}
{% extends 'Frontend/Master.twig' %}
{% block body %}
    <div class='wrap'>
        {% block layout__header %}
            {% include 'Frontend/Components/Header/Header.twig' %}
        {% endblock layout__header %}

        <div class='container content'>
            {% block flash_messages %}
                {% include '@parent/Frontend/Components/FlashMessage.twig' %}
            {% endblock flash_messages %}

            {% block content %}
            {% endblock content %}
        </div>

    {% block layout__footer %}
        {% include 'Frontend/Components/Footer/Footer.twig' %}
    {% endblock layout__footer %}
    </div>
{% endblock body %}