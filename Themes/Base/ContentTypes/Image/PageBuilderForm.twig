<div class="form">
    <div class="form-group">
        <label>{{ i18n('type_image', 'Image') }}</label>

        {% if data.url %}
            <div class="preview-image">
                <img src="{{ media(data.url, 200) }}" width="200" title="{{ data.url }}" />
            </div>
        {% endif %}

        <input class="form-control" name="image" type="file"  accept="image/*" />

    </div>
    <div class="form-group">
        <label>CSS Class</label><input class="form-control" type="text" name="css" value="{{ data.css }}">
    </div>
</div>
