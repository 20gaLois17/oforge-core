<div class="content-type-edit-video-wrapper">
    {% if data.data.path %}
        <video {% if data.data.autoplay %}autoplay{% endif %} {% if data.data.controls %}controls{% endif %}
            {% if data.data.loop %}loop{% endif %} {% if data.data.muted %}muted{% endif %} class="video">
            <source src="{{ data.data.path }}" type="video/mp4">
        </video>
    {% else %}
        {{ i18n('cms_contentype_video_no_video_uploaded', {
            en: 'No video uploaded yet',
            de: 'Noch kein Video hochgeladen',
        }) }}
    {% endif %}
</div>
