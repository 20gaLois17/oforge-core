{% extends "Backend/Master/Index.twig" %}

{% set page_header = i18n('profile') %}

{% set breadcrumbs = backend_breadcrumbs(meta.route.name)|default({})|merge([{
    path: meta.route.name,
    visible: true,
    name: page_header,
}]) %}

{% block pagecontent %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-user"></i>
                        {{ page_header }}
                    </h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        {% set profileDashboardTiles = [
                            {
                                label: i18n('profile_settings_login', {en: 'Login', de: 'Login'}),
                                icon: 'fa fa-sign-in',
                                route: 'backend_profile_login'
                            },
                            {
                                label: i18n('profile_settings_dashboard_widgets', {en: 'Dashboard widgets', de: 'Dashboard-Widgets'}),
                                icon: 'fa fa-th',
                                route: 'backend_profile_dashboard_widgets'
                            }
                        ] %}
                        {#
                        {
                            label: i18n('profile_settings_details', {en: 'Personal informations', de: 'Pers√∂nliche Angaben'}),
                            icon: 'fa fa-user-circle',
                            route: 'backend_profile_details'
                        },
                        #}
                        {% for profileDashboardTile in profileDashboardTiles %}
                            <div class="col-lg-4 col-xs-6">
                                <div class="small-box bg-gray">
                                    <div class="inner">
                                        <h3>{{ profileDashboardTile.label }}</h3>
                                        <p>&nbsp;</p>
                                    </div>
                                    <div class="icon"><i class="{{ profileDashboardTile.icon }}"></i></div>
                                    <a href=" {{ url(profileDashboardTile.route) }}" class="small-box-footer">
                                        {{ i18n('Go to', {en: 'Go to', de: 'Gehe zu'}) }} <i
                                            class="fa fa-arrow-circle-right"></i>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="box-footer">
                    <a href="{{ url('backend_dashboard') }}" class="btn btn-default">
                        {{ i18n('back to dashboard') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock pagecontent %}
