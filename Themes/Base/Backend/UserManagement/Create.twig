{% extends "Backend/Master/Index.twig" %}

{% block pagecontent %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">

                <div class="box-header">
                    <h3 class="box-title">{{ i18n("user_add") }}</h3>
                </div>

                <div class="box-body">
                    <form id="form_create" action="{{ url("backend_users_create") }}" method="post">
                        <div class="form-group">
                            <label for="email">
                                {{ i18n("email") }}
                            </label>
                            <input class="form-control"
                                   type="email"
                                   id="email"
                                   name="email"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                {{ i18n("password") }}
                            </label>
                            <input class="form-control"
                                   type="password"
                                   id="password"
                                   name="password"
                                   required>
                        </div>
                        <div class="form-group">
                            <label for="role">
                                {{ i18n("role") }}
                            </label>
                            <input class="form-control"
                                   type="text"
                                   id="role"
                                   name="role"
                                   required>
                        </div>
                        <button type="submit" class="btn btn-primary">{{ i18n("add") }}</button>
                        <a href="javascript:location.href='{{ url("backend_users") }}'" class="btn btn-default">{{ i18n("cancel") }}</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock pagecontent %}