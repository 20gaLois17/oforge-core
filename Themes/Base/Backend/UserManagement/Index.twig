{% extends "Backend/Master/Index.twig" %}

{% block pagecontent %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Users</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th><i class="fa fa-edit"></i> Update</th>
                        <th><i class="fa fa-user-times"></i> Delete</th>
                    </tr>
                    </thead>
                    <tbody>

                    <tr>
                        {% for user in users %}
                            <td>{{ user.email }}</td>
                            <td>{{ user.role }}</td>
                            <th>
                                <a href="#">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </th>
                            <th>
                                <a href="{{ url("backend_users_delete") }}?id={{ user.id }}">
                                    <i class="fa fa-user-times"></i>
                                </a>
                            </th>
                        {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
{% endblock %}
