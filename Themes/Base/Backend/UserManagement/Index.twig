{% extends "Backend/Master/Index.twig" %}

{% block pagecontent %}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">{{ i18n("usermanagement_title") }}</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Email</th>
                        <th>Role</th>
                        <th><i class="fa fa-edit"></i> Update</th>
                        <th><i class="fa fa-user-times"></i> Delete</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.email }}</td>
                                <td>{{ user.role }}</td>
                                <th>
                                    <a href="{{ url("backend_users_update") }}?id={{ user.id }}"
                                       class="btn btn-default">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </th>
                                <th>
                                    <a href="#"
                                       class="btn btn-danger"
                                       data-toggle="modal"
                                       data-target="#delete_modal"
                                       data-title="{{ i18n("user_delete_title") }}"
                                       data-label="{{ i18n("user_delete_message") }}"
                                       data-url="{{ url("backend_users_delete") }}"
                                       data-cancel-url="{{ url("backend_users") }}"
                                       data-query-id="{{ user.id }}"
                                       data-name="{{ user.email }}">
                                        <i class="fa fa-user-times"></i>
                                    </a>
                                </th>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% include "Backend/UserManagement/Delete.twig" %}
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
{% endblock %}
