{% set breadcrumbs = backend_breadcrumbs(meta.route.name) %}
{% if breadcrumbs %}
    <ol class="breadcrumb">
        <li><a href="{{ url("backend_dashboard") }}"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        {% for item in breadcrumbs %}
            <li class="{% if item.path == meta.route.path %}active{% endif %}">
                {% if item.path %}
                    <a href="{{ url(item.path) }}">
                        {{ item.name }}
                    </a>
                {% else %}
                    {{ item.name }}
                {% endif %}
            </li>
        {% endfor %}
    </ol>
{% endif %}
