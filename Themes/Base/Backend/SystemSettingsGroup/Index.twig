{% extends "Backend/Master/Index.twig" %}

{% block pagecontent %}

    {{ o_dump() }}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <form method="post" >
                        {% for element in config %}
                            {% if element.type == "boolean" %}
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"> {{ element.label }}
                                    </label>
                                </div>

                            {% elseif element.type == "string" %}
                                <div class="form-group">
                                    <label for="{{ element.name }}">{{ element.label }}</label>
                                    <input type="{{ element.type }}" class="form-control" id="{{ element.name }}"
                                           value="{{ element.values[0].value }} ">
                                </div>

                            {% elseif element.type == "integer" %}
                                <div class="form-group">
                                    <label for="{{ element.name }}">{{ element.label }}</label>
                                    <input type="{{ element.type }}" class="form-control" id="{{ element.name }}"
                                           value="{{ element.values[0].value }}">
                                </div>

                            {% else %}
                                <p>ERROR: Because Steffen is an idiot</p>

                            {% endif %}
                        {% endfor %}

                        <button type="submit" class="btn btn-primary">{{ i18n("submit") }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
