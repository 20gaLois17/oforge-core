{% if item[crudProperty.name] %}
    {% set imagePath = media(item[crudProperty.name]) %}
    <a href="{{ imagePath }}" title="{{ imagePath }}" target="_blank">
        <img width="{{ crudProperty.renderer.width|default(null) }}"
             src="{{ media(item[crudProperty.name], crudProperty.renderer.width|default(0)) }}" title=" {{ imagePath }}" />
    </a>
{% else %}
    {{ i18n('backend_crud_no_image', {en: 'no image', de: 'kein Bild'}) }}
{% endif %}
