<textarea class="form-control"
          {% if property.crud[crud.context] == 'editable' %}name="data[{% if crud.context == 'index' %}{{ item.id }}][{% endif %}{{ property.name }}]"
          {% else %}readonly{% endif %}
        {% if property.crud[crud.context] == 'readonly' %}readonly{% endif %}
        {% if property.editor.placeholder %}placeholder="{{ property.editor.placeholder }}"{% endif %}
        {% if property.editor.maxlength %}maxlength="{{ property.editor.maxlength }}"{% endif %}
>{{ item[property.name] }}</textarea>
