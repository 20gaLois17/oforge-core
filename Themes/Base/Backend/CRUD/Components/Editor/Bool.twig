<div>
    {% with %}
        {% set crudFieldDisabled = crudProperty.crud[crud.context] != 'editable' %}
        {% if crud.context == 'index' %}
            {% set crudFieldName = 'data[' ~ crudItem.id ~ '][' ~ crudProperty.name ~ ']' %}
        {% else %}
            {% set crudFieldName = 'data[' ~ crudProperty.name ~ ']' %}
        {% endif %}
        {% include 'Backend/Components/Form/Switch.twig' with {
            crudFieldID: crudFieldID,
            name: crudFieldName,
            disabled: crudFieldDisabled,
            checked: crudItem[crudProperty.name] is defined ? crudItem[crudProperty.name] : crudProperty.editor.default,
        } only %}
    {% endwith %}
</div>
