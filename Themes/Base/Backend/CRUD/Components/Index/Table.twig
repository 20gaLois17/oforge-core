<table id="crud_index_table" class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        {% for property in crud.properties %}
            <th>
                {{ i18n(property.label|default('backend_crud_property__' ~ crud.model~ '_' ~ property.name) ) }}
            </th>
        {% endfor %}
        {% if crud.hasRowActions %}
            <th class="text-center">{{ i18n('backend_crud_table_column_rowactions') }}</th>
        {% endif %}
    </tr>
    </thead>
    <tbody>
    {% for item in crud.items %}
        <tr>
            {% for property in crud.properties %}
                {% include 'Backend/CRUD/Components/Index/TableCell.twig' %}
            {% endfor %}
            {% if crud.hasRowActions %}
                {% include 'Backend/CRUD/Components/Index/TableRowActions.twig' %}
            {% endif %}
        </tr>
    {% else %}
        <tr>
            {% set width = crud.hasRowActions + crud.properties|default([])|length %}
            <td colspan="{{ width }}">{{ i18n('backend_crud_table_empty') }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
