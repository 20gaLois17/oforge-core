{% if crud.filter %}
    <div class="row">
        <div class="col-xs-12">
            <form method="GET" class="form-inline">
                {% for propertyName, filterConfig in crud.filter %}
                    {% if filterConfig.label is defined %}
                        {% set filterTitle = i18n(filterConfig.label) %}
                    {% else %}
                        {% set filterTitle = propertyName|capitalize %}
                    {% endif %}
                    {% include 'Backend/CRUD/Components/Index/FilterType/' ~ filterConfig.type|capitalize ~ '.twig' ignore missing %}
                {% endfor %}
                <button class="btn btn-default" type="submit">{{ i18n('backend_crud_btn_filter_submit', 'Filter') }}</button>
            </form>
        </div>
    </div>
{% endif %}
