{% if crud.hasEditors and crudProperty.name != 'id' and crudProperty.crud.index == 'editable' %}
    <td class="crud-datatype-{{ crudProperty.type }} crud-property-{{ crudProperty.name }}">
        {% include CRUD_path('Components/Editor.twig') %}
    </td>
{% else %}
    {% set crudColumnAlignment = (crudProperty.renderer.alignment ? crudProperty.renderer.alignment : (crudProperty.type in ['int', 'float', 'currency'] ? 'right' : 'left')) %}
    <td class="crud-datatype-{{ crudProperty.type }} crud-property-{{ crudProperty.name }} text-{{ crudColumnAlignment }}">
        {% include CRUD_path('Components/Renderer.twig') %}
    </td>
{% endif %}
