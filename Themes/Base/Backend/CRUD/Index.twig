{% extends "Backend/Master/Index.twig" %}

{% block pagecontent %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <a href="" class="btn btn-success">{{ i18n('crud_add_new') }}</a>
            </div>
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-body table-responsive no-padding">
                        {% if editInline %}
                        <form method="post">
                            {% endif %}
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    {% for head in header %}
                                        <th>{{ i18n('backend_crud_header_' ~ head.name ) }}</th>
                                    {% endfor %}
                                </tr>
                                </thead>

                                <tbody>
                                {% for item in result %}
                                    <tr>
                                        {% for head in header %}
                                            <td>
                                                {% if editInline %}
                                                    {% include 'Backend/CRUD/Components/Inline.twig' with  {'item':item, 'column': head } %}
                                                {% else %}
                                                    <a href="{{ url(meta.route.name  ~ "_detail") ~ "?id=" ~ item.id }}">{{ item[head.name] }}</a>
                                                {% endif %}
                                            </td>
                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            {% if editInline %}
                            <input type="hidden" name="type" value="update" />
                            <input type="submit" class="btn btn-success" value="{{ i18n('backend_crud_save') }}">
                        </form>
                        {% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    {{ o_dump() }}
{% endblock %}