{% block leave_comment %}
    <div class="blog-post-leave-comment">
        <h2>{{ i18n('plugin_blog_block_write_comment_title', {en: 'Write a comment', de: 'Schreibe einen Kommentar'}) }}</h2>
        <p>{{ i18n('plugin_blog_block_write_comment_subtitle', {en: 'Sign in with your account to post a comment.', de: 'Melde dich mit deinem Account an, um einen Kommentar zu schreiben.'}) }}</p>
        {% if blog.userLoggedIn %}
            {% include 'Plugins/Blog/Frontend/Post/LeaveCommentForm.twig' %}
        {% else %}
            {% include 'Plugins/Blog/Frontend/Post/LoginRegistrationForm.twig' %}
        {% endif %}
    </div>
{% endblock %}
