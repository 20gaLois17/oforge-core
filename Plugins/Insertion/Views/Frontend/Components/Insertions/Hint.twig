{% if hintContent %}
    <span class="hint">i<span class="hint--content">
                                                       <span
                class="hint">i</span><a class="link link--insertion-create" data-modal-view="{{ content['url'] }}">{{ hint }}</a></span></span>
    <div data-modal-content="{{ content['url'] }}"
         class="modal-view">
        <div class="modal-view__close"
             data-modal-close="{{ content['url'] }}">âœ•
        </div>
        <div class="modal-view__content">
            <picture class="lazy">
                <img class="lazy" data-src="{{ media(content['url']) }}" alt=""/>
            </picture>
        </div>
    </div>
{% else %}
    <span class="hint">i<span class="hint--content"><span class="hint">i</span>{{ hint | raw }}</span></span>
{% endif %}
