{% block product_list_sort %}
    <div class="panel panel--sort flex flex--row flex--center flex--between">
        <div class="result">
            <h3 class="result__text">{{ search.query.count }} {{  i18n('insertion_' ~ insertionType.name ~ 'count', i18n('insertion_count' ,'insertions found')) }}</h3>
        </div>
        <div class="sort">
            <select onchange="window.location.href = Oforge.updateQueryString('order', this.value)"
                    name="product-list-sort" id="product-list-sort" class="form__input">
                {% set orderItems = ['price_asc', 'price_desc', 'date_asc', 'date_desc'] %}
                {% for orderItem in orderItems %}
                    <option value="{{ orderItem }}"
                            {% if search.order is same as(orderItem) %}selected="selected"{% endif %} >{{ i18n(orderItem) }}</option>
                {% endfor %}
            </select>

            <form method="post"
                  action="{{ url('frontend_account_insertions_toggleSearchBookmark', {'typeId': typeId }) }}"
                  enctype="multipart/form-data">
                <input type="hidden" name="filter" value="{{ search.filter|json_encode() }}" />
                <input type="submit"
                       value="{% if hasSearchBookmark(typeId, search.filter ) %}Remove from wishlist{% else %}Add to wishlist{% endif %}" />
            </form>

        </div>
    </div>
{% endblock product_list_sort %}
