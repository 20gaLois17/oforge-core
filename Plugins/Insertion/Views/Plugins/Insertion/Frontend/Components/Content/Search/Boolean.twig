<div class="form__control">
    <label for="insertion[{{ attribute.id }}]" class="form__label form__label--checkbox {{ label_class }}"> {{  i18n(attribute.name) }}</label>
    <input type="checkbox"
           class="form__input form__input--checkbox-small"
           name="insertion[{{ attribute.id }}]"
           id="insertion[{{ attribute.id }}]"
            {% if data['insertion'][attribute.id] == 'on' %}
                checked="checked"
            {% endif %}
    >
</div>
