{% extends "Plugins/Insertion/Frontend/FrontendInsertion/Pages/PageBase.twig" %}

{% block page_content %}
    {# contact information #}
    <textarea name="insertion_description">Lorem Ipsum</textarea>
    {# contact attributes #}
    {% for attributeGroup in attributes %}
        {% if attributeGroup.items|length > 0 and attributeGroup.name == 'contact' %}
            <div class="attribute-group">
                <h2>{{ i18n(attributeGroup.name) }}</h2>
                <div>
                    {% for attribute in attributeGroup.items %}
                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/Attributes/' ~ attribute.attributeKey.type|capitalize  ~ '.twig'  with {'attribute': attribute.attributeKey, 'required': attribute.required } %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    {% endfor %}

    <input type="text" name="contact_name"
           value="{% if data['contact_name'] is defined %}{{ data['contact_name'] }}{% else %}Example Name{% endif %}" />
    <input type="email" name="contact_email" value="Example@Name.de" />
    <input type="tel" name="contact_phone" value="012121312" />
    <input type="text" name="contact_zip" value="01234" />
    <input type="text" name="contact_city" value="Dortmund" />

    <label>
        Klick mich
        <input type="checkbox" name="contact_visible" />
    </label>

{% endblock page_content %}
