{% block page_content %}
    {# Main details #}
    <div class="form-controls">
        <h2 class="title">{{ i18n('main') }}</h2>
    </div>
    <div class="form-controls">
        <div class="form__control form__control--xs">
            <label for="insertion_name"
                   class="form__label form__label--title">{{ i18n('insertion_name' ) }}</label>
            <input name="insertion_name"
                   value="{{ data['insertion_name'] }}"
                   type="text"
                   class="form__input form-control"
                   placeholder="{{ i18n('insertion_name_placeholder') }}"
                   data-required
                   required>
        </div>
    </div>

    <div class="form-controls">
        {% for attributeGroup in attributes %}
            {% if attributeGroup.items|length > 0 and attributeGroup.name == 'main' %}
                {% for attribute in attributeGroup.items %}
                    <div class="form__control form__control--s">
                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/Attributes/' ~ attribute.attributeKey.type|capitalize  ~ '.twig'  with {'attribute': attribute.attributeKey, 'required': attribute.required, 'label_class': 'form__label--title' } %}
                    </div>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>

    <div class="form-controls">
        <div class="form__control form__control--s">
            <label for="insertion_title"
                   class="form__label form__label--title">{{ i18n('insertion_title') }}</label>
            <input name="insertion_title"
                   value="{{ data['insertion_title'] }}"
                   type="text"
                   class="form__input form-control"
                   placeholder="{{ i18n('insertion_name_placeholder') }}"
                   data-required
                   required>
        </div>
        <div class="form__control">
            {% include 'Plugins/Insertion/Frontend/Components/Content/ImageUpload.twig' %}
        </div>
    </div>

{% endblock page_content %}
