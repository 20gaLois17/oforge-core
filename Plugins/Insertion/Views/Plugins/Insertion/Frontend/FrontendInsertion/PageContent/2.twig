{% block page_content %}
    {# Main attributes #}
    <div class="form-controls">
        {% for attributeGroup in attributes %}
            {% if attributeGroup.items|length > 0 and attributeGroup.name == 'features' %}
                <div class="attribute-group">
                    <h2 class="title title--attribute-group">{{ i18n(attributeGroup.name) }}</h2>
                    {% for attribute in attributeGroup.items %}
                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/Attributes/' ~ attribute.attributeKey.type|capitalize  ~ '.twig'  with {'attribute': attribute.attributeKey, 'required': attribute.required } %}
                    {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="form-controls">
        <div class="attribute-group">
            <label for="price"
                   class="title title--attribute-group">{{ i18n('price') }}</label>
            <div class="form__control">
                <label for="price"
                       class="form__input form__input--inside-label">
                    <input type="number"
                           name="price"
                           id="price"
                           min="0"
                           value="{{ data['price'] }}"
                           class="form__input" />
                    {% if i18nExists('unit_price') %}
                        <span class="input__unit">
                        {{ i18n('unit_price') }}
                    </span>
                    {% endif %}
                </label>
            </div>
        </div>
    </div>

    <div class="form-controls">
        {% for attributeGroup in attributes %}
            {% if attributeGroup.items|length > 0 and not  (attributeGroup.name == 'features' or attributeGroup.name == 'main' or attributeGroup.name == 'contact') %}
                <div class="attribute-group">
                    <h2 class="title title--attribute-group">{{ i18n(attributeGroup.name) }}</h2>
                    {% for attribute in attributeGroup.items %}
                        {% include 'Plugins/Insertion/Frontend/FrontendInsertion/Attributes/' ~ attribute.attributeKey.type|capitalize  ~ '.twig'  with {'attribute': attribute.attributeKey, 'required': attribute.required } %}
                    {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
    </div>

{% endblock page_content %}
