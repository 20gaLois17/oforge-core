{# block account__content #}
{% block account_content %}
    <div class="account__content flex flex--row flex--wrap">
        {% block helpdesk_title %}
            <h3 class="form__title">{{ i18n('support', 'Support') }}</h3>
        {% endblock helpdesk_title %}

        {% block helpdesk_description %}
            {% set content = content('helpdesk_description_' ~  meta.language) %}
            {% if content %}
                {% include 'ContentTypes/' ~ content.path ~ '/Index.twig' with {'data': content} %}
            {% endif %}
        {% endblock helpdesk_description %}

        {% block helpdesk__form %}
            {% include 'Plugins/Helpdesk/Frontend/Components/Forms/HelpdeskForm.twig' %}
        {% endblock helpdesk__form %}

        {% block helpdesk__support_tickets %}
            {% include 'Plugins/Helpdesk/Frontend/Components/Content/TicketList.twig' %}
        {% endblock helpdesk__support_tickets %}
    </div>
{% endblock account_content %}
