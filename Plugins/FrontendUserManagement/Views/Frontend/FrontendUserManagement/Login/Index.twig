{% extends '@parent/Frontend/Layout.twig' %}
{% block content %}
    <div class="content">
        {% block login %}
        <div class="login">
            {% include 'Frontend/Components/Forms/LoginForm.twig' %}
            <div class="form-controls pad-l-top">
                <div class="form__control flex flex--row flex--center flex--between">
                    <a href="{{ url('frontend_registration') }}" class="button button--secondary">{{ i18n('or_register') }}</a>
                    <a href="{{ url('frontend_forgot_password') }}" class="button button--primary">{{ i18n('forgot_password') }}</a>
                </div>
            </div>
        </div>
        {% endblock login %}
    </div>
{% endblock content %}
