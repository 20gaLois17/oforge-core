{% extends "@parent/Frontend/Layout.twig" %}

{% block content %}
    <div class="content">
        {% block forgot_password_reset %}
            <div class="panel panel--forgot-password-reset flex">
                {% block forgot_password_reset_title %}
                    <h2 class="panel__title">{{ i18n('welcome') }}</h2>
                {% endblock forgot_password_reset_title %}

                {% block forgot_password_reset_subtitle %}
                    <h3 class="panel__sub-title">{{ i18n('Password reset') }}</h3>
                {% endblock forgot_password_reset_subtitle %}

                {% include 'Frontend/Components/Forms/ForgotPasswordResetForm.twig' %}
            </div>
        {% endblock forgot_password_reset %}
    </div>
{% endblock content %}