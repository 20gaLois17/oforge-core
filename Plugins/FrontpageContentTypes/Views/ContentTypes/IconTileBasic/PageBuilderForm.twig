<div class="form">
    <div class="form-group">
        <label>{{ i18n('type_icon', 'icon') }}</label>
        {% if data.url %}
            <div class="preview-image">
                <img src="{{ media(data.url, 200) }}" width="200" title="{{ data.url }}" />
            </div>
        {% endif %}

        <input class="form-control" name="icon" type="file" accept=".svg">
    </div>

    <div class="form-group">
        <label>{{ i18n('icon_tile_caption', 'Bildunterschrift') }}</label>
        <input type="text" name="caption" class="form-control" value="{{ data.caption }}">
    </div>

    <div class="form-group">
        <label>{{ i18n('icon_tile_link', 'Link') }}</label>
        <input type="text" name="link" class="form-control" value="{{ data.link }}">
    </div>
    <div class="form-group">
        <label>{{ i18n('open_in_new_tab', {en: 'Open in new Tab', de: 'In neuem Tab Ã¶ffnen'}) }}</label>
        <div>
            {% include 'Backend/Components/Form/Switch.twig' with {
                name: 'targetBlank',
                checked: data.externalLink,
            } only %}
        </div>
    </div>
    {% include 'Backend/Components/ColorPicker.twig' with {
        label: i18n('background_color', 'Hintergrundfarbe'),
        name: 'backgroundcolor',
        value: data.backgroundcolor,
        default: '#ffffff',
    } only %}
    {% include 'Backend/Components/ColorPicker.twig' with {
        label: i18n('font_color', 'Schriftfarbe'),
        name: 'fontcolor',
        value: data.fontcolor,
        default: '#6f8e2b',
    } only %}
    <div class="form-group">
        <label>{{ i18n('colors_preview', {en: 'Preview of colors', de: 'Vorschau der Farben'}) }}</label>
        {% include 'Backend/Components/ColorPreview.twig' with {
            text: '#cms_content_type_editor_wrapper input[name=caption]',
            background: '#cms_content_type_editor_wrapper #color_picker_backgroundcolor',
            foreground: '#cms_content_type_editor_wrapper #color_picker_fontcolor',
        } only %}
    </div>


</div>
